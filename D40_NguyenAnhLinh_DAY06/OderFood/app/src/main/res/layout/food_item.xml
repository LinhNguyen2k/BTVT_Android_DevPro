<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:background="#009688"
    android:padding="@dimen/_10sdp"
    android:id="@+id/layoutItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgFood"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"/>
    <TextView
        android:textColor="#DDF6F6F6"
        android:layout_toRightOf="@+id/imgFood"
        android:id="@+id/tvNamefood"
        android:text="Pizza"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_centerVertical="true"
        android:textSize="@dimen/_17sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#DDF6F6F6"
        android:visibility="invisible"
        android:id="@+id/left"
        android:layout_toRightOf="@+id/tvNamefood"
        android:layout_centerVertical="true"
        android:textSize="@dimen/_17sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#DDF6F6F6"
        android:visibility="invisible"
        android:id="@+id/tvAmount"
        android:layout_toRightOf="@+id/left"
        android:layout_centerVertical="true"
        android:textSize="@dimen/_17sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#DDF6F6F6"
        android:visibility="invisible"
        android:id="@+id/right"
        android:layout_toRightOf="@+id/tvAmount"
        android:layout_centerVertical="true"
        android:textSize="@dimen/_17sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#DDF6F6F6"
        android:id="@+id/dolaa"
        android:text="$"
        android:textSize="@dimen/_12sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:textColor="#DDF6F6F6"
        android:id="@+id/tvPrice"
        android:text="50"
        android:textSize="@dimen/_12sdp"
        android:layout_toLeftOf="@id/dolaa"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#DDF6F6F6"
        android:id="@+id/tvDongia"
        android:text="Đơn giá: "
        android:textSize="@dimen/_12sdp"
        android:layout_toLeftOf="@id/tvPrice"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_below="@+id/imgFood"
        android:layout_width="match_parent"
        android:background="#D8C7C7"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="@dimen/_1sdp">
    </LinearLayout>
</RelativeLayout>
</layout>